@model PartialConcert.Data.Entities.Ticket

@{
    ViewData["Title"] = "EditCheckTicket";
}

<div class=justify-content-center "row">
    <div class="col-md-4 offset-4 shadow border border-5 border-dark">
        <div class="panel panel-default">
            <div class="panel-body justify-content-center text-center ">
                 <div class="panel-heading">
                    <h3 class="panel-title mt-auto justify-content-center" style="font-size:200%; color:darkblue;">Ticket Disponible</h3>
                </div>
                <div class="form-group mt-2">
                    <a asp-action="EditTicket" asp-route-id="@Model?.Id" class="btn btn-outline-success">Registrar</a>
                    <a asp-action="CheckTicket" class="btn btn-outline-secondary">Regresar</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}