@model PartialConcert.Models.TicketViewModel
@{
    ViewData["Title"] = "Index";
}
<div class="row">
    <div class="col-md-4 offset-4">
        <h3>Validar ticket</h3>
        <form asp-action="CheckTicket">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>


            <div class="form-group mt-2">
                <input type="submit" value="Validar" class="btn btn-outline-primary" />
                <a asp-action="Index" class="btn btn-outline-secondary">Regresar</a>
            </div>
        </form>
        <div class="text-center">
            <h3 @if (TempData["Message"] != null)
                {
                    <span class="text-danger"> @Html.Encode(TempData["Message"])</span>
                }
            </h3>
            <hr />
            @if (TempData["Name"] != null)
            {
                <p>
                    <h4>Datos del ticket:</h4>
                    <br />
                    Nombre: <span class="text-dark"> @Html.Encode(TempData["Name"])</span>
                </p>
            }
            <br />
            @if (TempData["Document"] != null)
            {
                <p>Documento: <span class="text-dark"> @Html.Encode(TempData["Document"])</span></p>
            }
            <br />
            @if (TempData["Date"] != null)
            {
                <p>Fecha: <span class="text-dark"> @Html.Encode(TempData["Date"])</span></p>
            }
            @if (TempData["Entrance"] != null)
            {
                <p>Entrada: <span class="text-dark"> @Html.Encode(TempData["Entrance"])</span></p>
            }
        </div>
    </div>
    <span asp-validation-for="Id" class="text-danger"></span>

    @section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
    }
